PROBZELUC=probzeluc

ZLI=../gridworld/gridworld.zli $(wildcard *.zli)
ZCI=$(ZLI:zli=zci)

NAME=restaurant


all: build

$(NAME).ml main.ml: $(ZCI) $(NAME).zls
	$(PROBZELUC) -I ../gridworld -s main $(NAME).zls

clean:
	rm -f $(NAME).ml main.ml
	rm -f *.zci

## Generic rules

.phony: build exec

exec: main.ml
	dune exec ./main.exe

build: main.ml
	dune build main.exe

%.zci: %.zli
	$(PROBZELUC) -I ../gridworld $<

cleanall: clean
	dune clean
	rm -f *~
